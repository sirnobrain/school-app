<%- include('templates/header.ejs') %>

<div class = "form-container">
	<form action = "/subjects/<%= studentSubject.id %>/givescore" method = "POST">
		Student: <%= studentSubject.Student.getFullName() %>
		<br>
		Subject: <%= studentSubject.Subject.subject_name %>
		<br>
		Score: 
		<input type = "text" name = "score" required>
		<input type = "hidden" name = "subject_id" value = "<%= studentSubject.Subject.id %>">
		<br>
		<br>
		<input class="waves-effect waves-light btn" type = "submit" value = "Give Score">
	</form>
</div>
