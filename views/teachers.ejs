<%- include('templates/header.ejs') %>
<div>
	<table>
		<thead>
			<tr>
				<th>Id</th>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Email</th>
				<th>Subject</th>
				<th>Options</th>
			</tr>
		</thead>
		<tbody>
			<%teachers.forEach(teacher => {%>
			<tr>
				<td><%= teacher.id %></td>
				<td><%= teacher.first_name %></td>
				<td><%= teacher.last_name %></td>
				<td><%= teacher.email %></td>
				<%if (teacher.Subject) {%>
					<td><%= teacher.Subject.subject_name %></td>
				<%} else {%>
					<td>Unassigned</td>
				<%}%>
				
				<td>
					<a href = "/teachers/edit/<%=teacher.id%>">edit</a>
					<a href = "/teachers/delete/<%=teacher.id%>">delete</a>
				</td>
			</tr>
			<%})%>
		</tbody>
	</table>
</div>
<div>
	<a href="/teachers/add">ADD TEACHER</a>
</div>

<%- include('templates/footer.ejs') %>